package function;

import java.util.Scanner;

public class sumofeven {

	public static void main(String[] args) {
		 Scanner sc=new Scanner (System.in);
		 int x=sc.nextInt();
		 int sum=0;
		 for(int i=0;i<=x;i++) {
			 if(i%2==0) {
				 System.out.println(i);
				 sum= sum+i;
				 System.out.println("Sum:"+sum);

			 }
			

	}

	}}
